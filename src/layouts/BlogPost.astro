---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Date from "../components/Date.astro";
import TableOfContents from "../components/TableOfContents.astro";
import type { MarkdownHeading } from "astro";

type Props = CollectionEntry<"blog">["data"] & { headings: MarkdownHeading[] };

const { title, description, pubDate, updatedDate, headings } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<script
			is:inline
			src="https://giscus.app/client.js"
			data-repo="NyaomiDEV/shit-nao-says"
			data-repo-id="R_kgDOPZAQTA"
			data-category="Comments"
			data-category-id="DIC_kwDOPZAQTM4CuEFP"
			data-mapping="pathname"
			data-strict="0"
			data-reactions-enabled="1"
			data-emit-metadata="0"
			data-input-position="top"
			data-theme="transparent_dark"
			data-lang="en"
			data-loading="lazy"
			crossorigin="anonymous"
			async></script>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="title">
					<div class="date">
						<Date date={pubDate} />
						{
							updatedDate && (
								<>
									{" "}
									- Last updated on{" "}
									<Date date={updatedDate} />
								</>
							)
						}
					</div>
					<h1>{title}</h1>
				</div>
				<div class="toc">
					<TableOfContents headings={headings} />
				</div>
				<div class="content">
					<slot />
				</div>
			</article>
			<section class="comments">
				<div class="giscus"></div>
			</section>
		</main>
		<Footer />
	</body>
</html>
